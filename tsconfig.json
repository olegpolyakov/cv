{
    "compilerOptions": {
        "rootDir": "./src",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "module": "ESNext",
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "jsx": "react-jsx",
        /* Linting */
        "strict": true,
    },
    "include": [
        "./src/**/*"
    ]
}